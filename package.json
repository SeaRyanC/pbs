{
  "name": "pbs",
  "version": "1.0.0",
  "description": "Pixel-Based Crafting - Image Pixelator",
  "type": "module",
  "scripts": {
    "build": "esbuild src/App.tsx --bundle --outfile=docs/bundle.js --format=esm --target=es2020 --jsx=automatic --jsx-import-source=preact",
    "typecheck": "tsc --noEmit",
    "watch": "esbuild src/App.tsx --bundle --outfile=docs/bundle.js --format=esm --target=es2020 --jsx=automatic --jsx-import-source=preact --watch"
  },
  "keywords": [
    "pixel",
    "image",
    "crafting",
    "pixelator"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "esbuild": "^0.25.0",
    "typescript": "^5.9.0-beta"
  },
  "dependencies": {
    "preact": "^10.25.4",
    "sharp": "^0.34.5"
  }
}
